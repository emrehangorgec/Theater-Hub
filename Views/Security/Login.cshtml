@model TheaterReservationPage.Models.User

@{
    Layout = null;
}
<link rel="stylesheet" href="~/Content/CSSFiles/loginmain.css" />
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div style="text-align: center;">
        <div class="containerLogin">
            <div id="login">
                <h3 class="text-center text-white pt-5">Login form</h3>
                <div class="container">
                    <div id="login-row" class="row justify-content-center align-items-center">
                        <div id="login-column" class="col-md-6">
                            <div id="login-box" class="col-md-12">

                                @ViewBag.Message @using (Html.BeginForm("Login", "Security", FormMethod.Post))
                                {
                                  
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Username) @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Username" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Password) @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                                    </div>
                                    <div class="form-group">
                                        <label for="remember-me" class="text-info"><span>Remember me</span>&nbsp;<span><input id="remember-me" name="remember-me" type="checkbox"></span></label><br>
                                        <a href=@Url.Action("Reservation","Home")><button class="btn btn-info btn-md">Login</button></a>
                                    </div>
                                    <div id="register-link" class="text-right">
                                        <a href="../UserManage/Create" class="text-info">Register here</a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>